<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="lk.ac.ucsc.webArc.assgnment.user.impl.beans.UserBean" table="usermm_user">
        <id name="userId" type="java.lang.Long">
            <column name="USER_ID" length="10"/>
            <generator class="assigned"/>
        </id>
        <property name="userNumber" type="java.lang.String">
            <column name="USER_NUMBER" not-null="true" unique="true" length="50"/>
        </property>
        <property name="userType" type="java.lang.Integer">
            <column name="USER_TYPE" not-null="true" length="10"/>
        </property>
        <property name="title" type="java.lang.String">
            <column name="TITLE" length="20"/>
        </property>
        <property name="firstName" type="java.lang.String">
            <column name="FIRST_NAME" length="255"/>
        </property>
        <property name="lastName" type="java.lang.String">
            <column name="LAST_NAME" length="255"/>
        </property>
        <property name="gender"  type="java.lang.String">
            <column name="GENDER" length="10"/>
        </property>
        <property name="officeTele" type="java.lang.String">
            <column name="OFFICE_TELE" length="20"/>
        </property>
        <property name="mobile" type="java.lang.String">
            <column name="MOBILE" length="20"/>
        </property>
        <property name="email" type="java.lang.String">
            <column name="EMAIL" length="100"/>
        </property>
        <property name="idCardNumber" type="java.lang.String">
            <column name="IDN_NUMBER" length="100"/>
        </property>
        <property name="address" type="java.lang.String">
            <column name="ADDRESS" length="500"/>
        </property>
        <one-to-one name="loginProfile"
                    class="lk.ac.ucsc.webArc.assgnment.user.impl.beans.UserLoginProfileBean"
                    cascade="all" lazy="false"/>

    </class>


    <class name="lk.ac.ucsc.webArc.assgnment.user.impl.beans.UserLoginProfileBean"
           table="cusmm_loginprofile">
        <id name="userId" type="java.lang.Long">
            <column name="USER_ID" not-null="true" length="10"/>
            <generator class="assigned"/>
        </id>
        <property name="loginName" type="java.lang.String">
            <column name="LOGIN_NAME" unique="true" length="150"/>
        </property>

        <property name="password" type="java.lang.String">
            <column name="PASSWORD" length="255"/>
        </property>


        <property name="status" type="java.lang.Integer">
            <column name="STATUS" length="10"/>
        </property>

        <property name="failedAttemptCount" type="java.lang.Integer">
            <column name="FAILED_ATTEMPT" length="10" default="0"/>
        </property>
        <property name="passwordExpDate" type="java.util.Date">
            <column name="PASSWORD_EXP_DATE"/>
        </property>

        <property name="lastLoginDate" type="java.util.Date">
            <column name="LAST_LOGIN_TIME"/>
        </property>

    </class>


</hibernate-mapping>



